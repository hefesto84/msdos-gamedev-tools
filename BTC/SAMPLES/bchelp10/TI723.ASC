    TITLE  :  matherr and signal Handlers




  /**************************************************************
  This program illustrates how to use matherr and signal.
  ***************************************************************/

  #include <math.h>
  #include <string.h>
  #include <stdio.h>
  #include <signal.h>

  /*
  New matherr function.
  */

  int matherr(struct exception *s)
  {
      puts("matherr!! \n");
      return 1;
  }

  /*
  New signal handler.
  */

  void catcher(void)
  {
       puts("catcher!!\n");
  }

  int main(void)
  {
      int x;

      signal(SIGFPE,catcher);
      x = log(-1);
      return 0;
  }













